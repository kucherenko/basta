{
  "compilerOptions": {
    "rootDir": "./src/",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": [
      "node",
      "mocha",
      "sinon",
      "chai"
    ],
    "removeComments": true,
    "target": "es2015",
    "lib": [
      "es2017"
    ],
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "src/**/*.test.ts",
    "src/test",
    "fixtures"
  ]
}
