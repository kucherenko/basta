            .footer {
                padding: 1em 0;
                color: #999;
                font-size: 70%;
            }

            @media (min-width: 48em) {
                .content {
                    padding: 2em 3em 0;
                    margin-left: 25%;
                }

                .header {
                    text-align: right;
                }

                .sidebar {
                    position: fixed;
                    top: 0;
                    width: 25%;
                    bottom: 0;
                    padding: 1em;
                }

                .footer {
                    text-align: center;

                }
            }
